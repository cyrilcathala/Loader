    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Loader.Controls;assembly=Loader"
    x:Class="Loader.Sample.Views.DefaultPage">
    <controls:Loader
